<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
<ImageView fx:id="image" fitHeight="400.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

<HBox alignment="CENTER" spacing="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
    <Button fx:id="dog" HBox.hgrow="ALWAYS">Dog</Button>
    <Button fx:id="cat" HBox.hgrow="ALWAYS">Cat</Button>
    <Button fx:id="llama" HBox.hgrow="ALWAYS">Llama</Button>
</HBox>

<Label fx:id="status" textFill="WHITE" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0">
      <font>
         <Font name="Arial" size="15.0" />
      </font></Label>
</AnchorPane>
